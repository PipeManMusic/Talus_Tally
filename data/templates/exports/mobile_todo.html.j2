<!DOCTYPE html>
<html lang="en">
{# Mobile Todo List Template
   Generates a dark-mode HTML page with task checkboxes
   
   Context variables:
   - nodes: List of all nodes in the project
   - project_id: Project identifier
#}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List - {{ project_id or 'Talus Tally' }}</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background-color: #1a1a1a;
            color: #e0e0e0;
            padding: 1rem;
            line-height: 1.6;
        }
        
        .container {
            max-width: 600px;
            margin: 0 auto;
        }
        
        h1 {
            font-size: 1.75rem;
            margin-bottom: 0.5rem;
            color: #ffffff;
        }
        
        .project-info {
            color: #888;
            font-size: 0.875rem;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #333;
        }
        
        .todo-list {
            list-style: none;
        }
        
        .todo-item {
            background-color: #2a2a2a;
            border: 1px solid #3a3a3a;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 0.75rem;
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
            transition: background-color 0.2s;
        }
        
        .todo-item:hover {
            background-color: #333;
        }
        
        .todo-checkbox {
            margin-top: 0.25rem;
            width: 20px;
            height: 20px;
            cursor: pointer;
            accent-color: #4a9eff;
            flex-shrink: 0;
        }
        
        .todo-content {
            flex: 1;
        }
        
        .todo-name {
            font-weight: 600;
            font-size: 1.125rem;
            margin-bottom: 0.25rem;
            color: #ffffff;
        }
        
        .todo-description {
            color: #aaa;
            font-size: 0.875rem;
        }
        
        .empty-state {
            text-align: center;
            padding: 3rem 1rem;
            color: #666;
        }
        
        .empty-state h2 {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }
        
        .stats {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.5rem;
            padding: 1rem;
            background-color: #2a2a2a;
            border-radius: 8px;
        }
        
        .stat {
            flex: 1;
            text-align: center;
        }
        
        .stat-value {
            font-size: 1.5rem;
            font-weight: bold;
            color: #4a9eff;
        }
        
        .stat-label {
            font-size: 0.75rem;
            color: #888;
            text-transform: uppercase;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>ðŸ“‹ Todo List</h1>
        <div class="project-info">
            Project: {{ project_id or 'Unknown' }}
            {% if template_version %} â€¢ Template v{{ template_version }}{% endif %}
        </div>
        
        {% set pending_tasks = nodes | selectattr('type', 'equalto', 'task') | rejectattr('status', 'equalto', 'Done') | list %}
        {% set total_tasks = nodes | selectattr('type', 'equalto', 'task') | list | length %}
        {% set completed_tasks = total_tasks - pending_tasks | length %}
        
        {% if total_tasks > 0 %}
        <div class="stats">
            <div class="stat">
                <div class="stat-value">{{ pending_tasks | length }}</div>
                <div class="stat-label">Pending</div>
            </div>
            <div class="stat">
                <div class="stat-value">{{ completed_tasks }}</div>
                <div class="stat-label">Done</div>
            </div>
            <div class="stat">
                <div class="stat-value">{{ total_tasks }}</div>
                <div class="stat-label">Total</div>
            </div>
        </div>
        {% endif %}
        
        {% if pending_tasks %}
        <ul class="todo-list">
            {% for node in pending_tasks %}
            <li class="todo-item">
                <input type="checkbox" class="todo-checkbox" id="task_{{ node.id }}">
                <div class="todo-content">
                    <label for="task_{{ node.id }}" class="todo-name">
                        {{ node.name }}
                    </label>
                    {% if node.properties.description %}
                    <div class="todo-description">
                        {{ node.properties.description }}
                    </div>
                    {% endif %}
                </div>
            </li>
            {% endfor %}
        </ul>
        {% else %}
        <div class="empty-state">
            <h2>ðŸŽ‰ All tasks complete!</h2>
            <p>You have no pending tasks.</p>
        </div>
        {% endif %}
    </div>
    
    <script>
        // Save checkbox state to localStorage
        document.querySelectorAll('.todo-checkbox').forEach(checkbox => {
            const taskId = checkbox.id;
            const saved = localStorage.getItem(taskId);
            if (saved === 'true') {
                checkbox.checked = true;
                checkbox.closest('.todo-item').style.opacity = '0.5';
            }
            
            checkbox.addEventListener('change', (e) => {
                localStorage.setItem(taskId, e.target.checked);
                e.target.closest('.todo-item').style.opacity = e.target.checked ? '0.5' : '1';
            });
        });
    </script>
</body>
</html>
